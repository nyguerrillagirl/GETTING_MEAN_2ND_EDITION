          .card.card-primary
            .card-block
              h2.card-title Location map
              // -
                img.img-fluid.rounded(src='https://maps.googleapis.com/maps/api/staticmap?center=51.455041,-0.9690884&zoom=17&size=400x350&sensor=false&markers=51.455041,-0.9690884&scale=2&key=AIzaSyBjTBISuMLH0gSj_90z42_LlX8PplzE6BU')
